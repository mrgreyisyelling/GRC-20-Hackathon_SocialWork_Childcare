{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "services/*": ["services/*"],
      "config/*": ["config/*"],
      "processors/*": ["processors/*"],
      "models/*": ["models/*"],
      "core/*": ["core/*"],
      "commands/*": ["cli/commands/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/models/oldstuff",
    "src/scripts/old-scripts"
  ],
}
